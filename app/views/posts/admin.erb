<h2>Statistics</h2>
<fieldset>
    <p>Total Members(by sql query):      <%= @members.size %></p>
    <p>Total Users:                      <%= @users.count %></p>
    <p>Total Posts:                      <%= @posts.count %></p>
    <p>Total Participants:               <%= @participants.count %></p>
    <p>Total Comments:                   <%= @comments.count %></p>

</fieldset>

<fieldset>
    <table border=1>
      <tr>
          <th>Post Id</th>
          <th>Created at</th>
          <th>Participants</th>
          <th>Comments</th>
      </tr>

      <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.created_at.to_s(:long) %></td>
            <td><%= post.participants.count %></td>
            <td><%= post.comments.count %></td>
        </tr>
      <% end %>
    </table>   
    <br/><br/>

    <% @users.each do |user| %>
      <%= user.email %>;
    <% end %><br/><br/>
    
    <table border=1>
      <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Member</th>
          <th>Activated At</th>
          <th>Email Id</th>
      </tr>

     <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.member? %></td>
            <td><%= user.activated_at %></td>
            <td><%= user.email %></td>
        </tr>
      <% end %>
    </table>   

</fieldset>


