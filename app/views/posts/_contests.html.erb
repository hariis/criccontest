<div id="left">  
  <div id="participants1">
    <% image_tag "group.png" %>
       
       <% link_to_remote ("My Contests (#{@user.posts.size})" + image_tag("bullet_arrow_down.png")), :url => { :action => :load_all_participants, :uid => @user.unique_id, :pid => @post.unique_id },:update => 'list-all-p' %>
           
   
       <ul id="participants-list">
            <% unless @user.posts.empty? %>
                <% @user.posts.each do |post| %>
                    <div><% link_to  h(post.subject), post.get_url_for(@user, 'show'), :class => "#{post.unread_comments_for(@user) > 0 ? "unread-post" : "read-post"}"   %></div>                    
                <% end %>
            <% end %>
       </ul>
          
   <div id="list-all-p1"></div>
  </div>

  <div id="participants">
      <b><span style='font-size:130%'><%= @post.subject %></span></b><br/> 
      <%= @contest.matches.size %> matches
      <h3 style="border-top:1px solid black;"> </h3>
      <%= render :partial => 'match', :collection => @contest.matches %>
  </div>
</div>
