<div id="left">  
  <div id="participants">
    <h3 style="border-bottom:1px solid #fff;"><%= image_tag "group.png" %>
       
       <%= link_to_remote ("My Contests (#{@user.posts.size})" + image_tag("bullet_arrow_down.png")), :url => { :action => :load_all_participants, :uid => @user.unique_id, :pid => @post.unique_id },:update => 'list-all-p' %>
            </h3>
   
       <ul id="participants-list">
            <% unless @user.posts.empty? %>
                <% @user.posts.each do |post| %>
                    <div><%= link_to  h(post.subject.capitalize), post.get_url_for(@user, 'show'), :class => "#{post.unread_comments_for(@user) > 0 ? "unread-post" : "read-post"}"   %></div>                    
                <% end %>
            <% end %>
       </ul>
          
   <div id="list-all-p"></div>
  </div>

<div id="participants">
<h3 style="border-bottom:1px solid #fff;"> <%= @post.subject %> (<%= @contest.matches.size %>)</h3>
    <%= render :partial => 'match', :collection => @contest.matches %>
   <div id="list-all-i"></div>
</div>
</div>
