<script type="text/javascript">
        $j(function(){
           $j('#tabs').tabs();
      });
 </script>
<style type="text/css">
  a.join-link, a.join-link:hover, a.join-link:visited{
    color: red;
    margin-left:10px;
}
</style>
<div id="dashboard-view">
    <% if current_user && current_user.admin? && current_user.admin_user? %>
          <%= button_to 'Start New Contest', new_contest_path, :class => 'submit' %>
          <%= button_to 'Create a Category', new_category_path, :class => 'submit' %>
          <%= button_to 'Create a Rule', new_entry_path, :class => 'submit' %>
          <% button_to 'Add Team', new_team_path, :class => 'submit' %>
          <%= button_to 'Add Total Score Prediction Entry', new_predict_total_score_path, :class => 'submit' %>
    <% end %>
    
<div id="tabs">
      <ul>
          <li><a href="#joined-posts">Current Fixtures</a></li>
      </ul>


<div id='joined-posts'> 
    <% count = 1 %>
    <% @contests.each do |contest| %>
      <div class="index"></div>
         <div class="<%= cycle('listing-line-odd', 'listing-line-even') %> post-item">
            <span style="color:green"><%  "#{count}." %> <% count = count + 1 %></span>    
            <div><span style="font-size:120%"><%= link_to  h(contest.name.capitalize), contest %></span></div>
            
            <span style="color:green">
                <%= contest.posts.size %> contest currently running
            </span>

            <% unless current_user && current_user.admin? && current_user.admin_user? %>
                <span style="float:right;font-size:120%;"><%= link_to 'Start a Contest', new_contest_post_path(contest)  %></span>
            <% end %>

            <% if current_user && current_user.admin? && current_user.admin_user? %>
                <br/><%= link_to 'edit', edit_contest_path(contest), :method => :get %><br/>
                <%= link_to '[X]', contest, :confirm => 'Are you sure? This will wipe out this contest and all of its instances.', :method => :delete %>
            <% end %>
         </div>
    <% end %>
  
</div>
</div>
</div>