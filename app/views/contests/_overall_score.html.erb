<div id="right1" style="padding-left:7px;">
    <div class="tc-row" style="font-size:20px;padding-top:12px;font-weight:bold;">Overall Standing </div>
  
    <% unless @users.empty? %>
      <% rank = 1 %>
      <% @users.each do |user| %>
         <div class="tc-row">

              <span style="float:left;">
                  <div class="tc-row-rank"><%= "#{rank}" %></div>
              </span>
              <% rank += 1 %>
              <span style="float:left;">
                  <% if user.avatar? %>
                    <%= image_tag user.avatar.url(:thumb) %>
                  <% else %>
                    <%= image_tag "fb_default.gif", :size => "36x32"  %>
                  <% end %>
              </span>

              <span style="float:left;margin-left:5px;">
                  <% @display_name = truncate(user.display_name(nil, nil), 20, "...").titleize %>
                  <span style="color:#21519C;"><%= "#{@display_name}" %></span>       
                  <div style="font-size:10px;"><%= user.total_score.nil? ? 0 : user.total_score %> points</div>
              </span> 
         </div>
       <% end %>
    <%  end %>
</div>

