<fieldset>
    <legend><b>Login</b></legend>
    <% form_for(@user_session) do |f| %>
      <%= error_messages_for :user_session, :header_message => '',:message => '' %>
                     
              <br/><%= f.label :email %><br/>
              <%= f.text_field :email %><br/><br/>
          
         
              <%= f.label :password %><br />
              <%= f.password_field :password %><br/><br/>
           
              <%= f.submit 'Login', :class => 'submit' %>
    <% end %>
    <br/>
    <div style="float:right;font-size:12px;padding-top1:40px">
          <%= link_to "Forgot Password", new_password_reset_path %> | <%= link_to "Resend Activation", resendnewactivation_users_path %>
    </div>

</fieldset>
